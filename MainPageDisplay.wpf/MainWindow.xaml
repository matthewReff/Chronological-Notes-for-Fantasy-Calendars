<Window x:Class="MainPageDisplay.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainPageDisplay.wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1400">
     
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Name="DateTextBox" 
                 Grid.Column="0"
                 Grid.Row="0"
                 Text="Date"
                 TextAlignment="Center"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 FontSize="40"
                 />

        <TextBox Name="DateTextBoxLabel" 
                 Grid.Column="0"
                 Grid.Row="1"
                 Text="{Binding DateField, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="40"
                 />
        
        <TextBlock Name="TitleTextBox" 
                 Grid.Column="1"
                 Grid.Row="0"
                 Text="Title"
                 TextAlignment="Center"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 FontSize="40"
                 />
        
        <TextBox Name="TitleTextBoxLabel" 
                 Grid.Column="1"
                 Grid.Row="1"
                 Text="{Binding TitleField, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="40"
                 />

        <TextBlock Name="BodyTextBoxLabel" 
                 Grid.Column="2"
                 Grid.Row="0"
                 Text="Body"
                 TextAlignment="Center"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 FontSize="40"
                 />

        <TextBox Name="BodyTextBox" 
                 Grid.Column="2"
                 Grid.Row="1"
                 Text="{Binding ContentField, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="40"
                 />


        <ListView Grid.Column="4"
                  Grid.Row="0"
                  Grid.RowSpan="5"
                  ItemsSource="{Binding Timeline}"
                  />
        
        


    </Grid>
</Window>
