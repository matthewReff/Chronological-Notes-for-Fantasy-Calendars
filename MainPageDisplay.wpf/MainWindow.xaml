<Window x:Class="MainPageDisplay.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainPageDisplay.wpf"
        xmlns:NoteNamespace="clr-namespace:DataStructures;assembly=SharedDataStructures"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1400">
     
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height=".5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Name="FilepathTextBoxLabel" 
                 Grid.Column="0"
                 Grid.Row="0"
                 Text="Filepath"
                   Grid.ColumnSpan="3"
                 TextAlignment="Center"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 FontSize="40"
                   Background="Wheat"
                 />

        <TextBox Name="FilepathTextBox" 
                 Grid.Column="0"
                 Grid.Row="1"
                 Grid.ColumnSpan="3"
                 Text="{Binding FilePathField, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 FontSize="30"
                 />
        
        <Button Name="a" 
                 Grid.Column="3"
                 Grid.Row="1"
                 Content="Load File"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="40"
                 Command="{Binding LoadFileButtonClick, Mode=OneWay}"
                 />
        
        <TextBlock Name="DateTextBoxLabel" 
                 Grid.Column="0"
                 Grid.Row="2"
                 Text="Date"
                 TextAlignment="Center"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 FontSize="40"
                   Background="Wheat"
                 />

        <TextBox Name="DateTextBox" 
                 Grid.Column="0"
                 Grid.Row="3"
                 Text="{Binding DateField, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="20"
                 />
        
        <TextBlock Name="TitleTextBoxLabel" 
                 Grid.Column="1"
                 Grid.Row="2"
                 Text="Title"
                 TextAlignment="Center"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 FontSize="40"
                   Background="Wheat"
                 />
        
        <TextBox Name="TitleTextBox" 
                 Grid.Column="1"
                 Grid.Row="3"
                 Text="{Binding TitleField, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center"
                 TextWrapping="Wrap"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="20"
                 />

        <TextBlock Name="BodyTextBoxLabel" 
                 Grid.Column="2"
                 Grid.Row="2"
                 Text="Body"
                 TextAlignment="Center"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 FontSize="40"
                 Background="Wheat"
                 />

        <TextBox Name="BodyTextBox" 
                 Grid.Column="2"
                 Grid.Row="3"
                 Text="{Binding ContentField, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 TextWrapping="Wrap"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="20"
                 />

        <Button Name="CreateTimelineEntryButton" 
                 Grid.Column="3"
                 Grid.Row="3"
                Content="Create Note"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="30"
                 Command="{Binding NoteCreateButtonClick}"
                 />

        <Button Name="EditSelectedNoteButton" 
                 Grid.Column="3"
                 Grid.Row="4"
                Content="Edit Selected Note"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="30"
                 Command="{Binding NoteCreateButtonClick}"
                 />
        
        <Button Name="RemoveSelectedNoteButton" 
                 Grid.Column="3"
                 Grid.Row="5"
                Content="Remove Selected Note"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="30"
                 Command="{Binding NoteCreateButtonClick}"
                 />

        <ListView Name="NoteListView"
                  Grid.Column="4"
                  Grid.Row="0"
                  Grid.RowSpan="6"
                  ItemsSource="{Binding ObservableTimelineField}" 
                  ItemContainerStyle="{StaticResource ListViewItemStyle}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            
            
            <ListView.ItemTemplate>
                
                <DataTemplate DataType="NoteNamespace:Note">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock  Grid.Column="0"
                                    Grid.Row="0" 
                                    TextAlignment="Center"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    TextWrapping="Wrap"
                                    FontSize="20"
                                    Text="{Binding Date, Mode=OneWay}"
                               />
                        
                        <TextBlock  Grid.Column="0"
                                    Grid.Row="1" 
                                    TextAlignment="Center"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    FontSize="20"
                                    TextWrapping="Wrap"
                                    Text="{Binding Title, Mode=OneWay}"
                               />
                        <TextBlock  Grid.Column="0"
                                    Grid.Row="2" 
                                    TextAlignment="Center"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    TextWrapping="Wrap"
                                    Text="{Binding Content, Mode=OneWay}"
                               />
                        
                        
                    </Grid>

                </DataTemplate>
            </ListView.ItemTemplate>
            

        </ListView>




        
        
        


    </Grid>
</Window>
